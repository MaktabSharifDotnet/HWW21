@using App.Domain.Core.Dtos.CommentAgg
@model List<CommentDto>

@{
    ViewData["Title"] = "نظرات کاربران";
    var postId = ViewBag.PostId;
}


<link rel="stylesheet" href="~/css/comment-style.css" />

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

           
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h3 class="fw-bold text-dark mb-0">
                    <i class="bi bi-chat-quote-fill text-primary me-2"></i>
                    نظرات کاربران
                </h3>
                <div>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill me-2">
                        <i class="bi bi-arrow-right"></i> بازگشت
                    </a>
                    <a asp-controller="Home" asp-action="CreateComment" asp-route-postId="@postId" class="btn btn-primary rounded-pill px-4 shadow-sm">
                        <i class="bi bi-pencil-fill me-2"></i> ثبت نظر جدید
                    </a>
                </div>
            </div>

          
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            
            <div class="comments-summary d-flex align-items-center justify-content-between">
                <div>
                    <span class="text-muted">تعداد نظرات :</span>
                    <span class="fw-bold fs-5 text-dark ms-1">@(Model?.Count ?? 0)</span>
                </div>
                
            </div>

          
            @if (Model != null && Model.Any())
            {
                <div class="comments-list">
                    @foreach (var comment in Model)
                    {
                        <div class="comment-card mb-4">
                         
                            <div class="comment-header">
                                <div class="d-flex align-items-center">
                                   
                                    <div>
                                        <div class="user-name">@comment.FullName</div>
                                        <div class="comment-date">
                                            <i class="bi bi-clock me-1"></i> @comment.CreatedAt.ToString("yyyy/MM/dd HH:mm")
                                        </div>
                                    </div>
                                </div>


                                <div class="mb-2 comment-score text-warning">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        
                                        if (i <= comment.Score)
                                        {
                                            <i class="bi bi-star-fill"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-star text-muted opacity-25"></i>
                                        }
                                    }
                                </div>
                            </div>

                           
                            <div class="comment-body">
                                @comment.Text
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
               
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="bi bi-chat-dots display-1 text-light" style="font-size: 5rem; color: #e9ecef !important;"></i>
                    </div>
                    <h5 class="text-muted fw-bold">هنوز نظری برای این پست ثبت نشده است</h5>
                    
                </div>
            }

        </div>
    </div>
</div>