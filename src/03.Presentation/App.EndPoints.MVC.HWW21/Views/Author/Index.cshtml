@model App.EndPoints.MVC.HWW21.Models.AuthorDashboardViewModel
@{
    ViewData["Title"] = "داشبورد نویسنده";
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
<link rel="stylesheet" href="~/css/custom-style.css" />

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4 author-profile-header">
        <div class="d-flex align-items-center gap-3">
            @if (!string.IsNullOrEmpty(Model.AuthorProfileImage))
            {
                <img src="~/images/profiles/@Model.AuthorProfileImage" class="author-avatar-large img-fit" alt="Profile" />
            }
            else
            {
                <img src="https://via.placeholder.com/60" class="author-avatar-large img-fit" alt="Default" />
            }

            <div class="author-info">
                <h4 class="mb-0">@Model.AuthorName</h4>
                <span class="text-muted small">نام نویسنده </span>
            </div>
        </div>


    </div>
    <h2 class="mb-4">👋 خوش آمدید به پنل مدیریت</h2>

    <div class="row">

        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">📂 دسته‌بندی‌های من</h5>
                    <a asp-controller="Category" asp-action="Create" class="btn btn-sm btn-light text-primary">
                        + دسته بندی جدید
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.CategoryDtos != null && Model.CategoryDtos.Any())
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>نام دسته</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cat in Model.CategoryDtos)
                                {
                                    <tr>
                                        <td>@cat.Name</td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a asp-controller="Category"
                                                   asp-action="Edit"
                                                   asp-route-id="@cat.Id"
                                                   class="btn btn-sm btn-warning">ویرایش</a>

                                                <form asp-controller="Category" asp-action="Delete" asp-route-categoryId="@cat.Id" method="post">
                                                    
                                                    <button type="submit"
                                                            class="btn btn-sm btn-danger"
                                                            onclick="return confirm('آیا از حذف دسته‌بندی @cat.Name مطمئن هستید؟');">
                                                        حذف
                                                    </button>

                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted text-center">هنوز دسته‌بندی نساخته‌اید.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">📝 پست‌های من</h5>
                    <a asp-controller="Post" asp-action="Create" class="btn btn-sm btn-light text-primary">
                        + پست جدید
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.PostDtos != null && Model.PostDtos.Any())
                    {
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>تصویر</th>
                                    <th>عنوان</th>
                                    <th>دسته</th>
                                    <th>تاریخ</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var post in Model.PostDtos)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(post.ImagePost))
                                            {
                                                <img src="~/images/posts/@post.ImagePost" class="post-thumb img-fit" />
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td>@post.Title</td>
                                        <td><span class="badge bg-secondary">@post.CategoryName</span></td>
                                        <td>@post.CreatedAt.ToShortDateString()</td>
                                        <td>
                                            <a asp-controller="Post"
                                               asp-action="Edit"
                                               asp-route-id="@post.Id"
                                               class="btn btn-sm btn-warning">ویرایش</a>
                                            <a href="#" class="btn btn-sm btn-danger">حذف</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted text-center">هنوز پستی ننوشته‌اید.</p>
                    }
                </div>
            </div>
        </div>

    </div>
</div>